<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Material.Custom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/materialPrimary</item>
        <item name="colorPrimaryDark">@color/materialPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/materialPrimaryDark
        </item>
        <item name="android:colorButtonNormal" tools:ignore="NewApi">@color/materialPrimary</item>

        <!-- DISABLE MULTITOUCH -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

</resources>
